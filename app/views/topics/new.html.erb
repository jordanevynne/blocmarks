<h1>Topics</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for topics</p>
    <ul>
      <li>guideline 1</li>
      <li>guideline 2</li>
      <li>guideline 3</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @topic do |f| %>
      <div class="form-group">
        <%= f.label "Topic" %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter topic name" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
