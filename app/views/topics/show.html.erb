<h1><%= @topic.title %></h1>

<%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<div class="row">
  <div class="col-md-8">
    <% @topic.bookmarks.each do |bookmark| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to bookmark.title, bookmark %>
        </h4>
      </div>
    </div>
<% end %>
</div>
<div class="col-md-4">
    <%= link_to "New Bookmark", new_bookmark_path(@topic), class: 'btn btn-success' %>
  </div>
</div>
