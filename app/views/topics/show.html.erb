<h1><%= @topic.title %></h1>
<%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<div class="row">
  <div class="col-md-8">
    <% @topic.bookmarks.each do |bookmark| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to bookmark.title, bookmark %>
        </h4>
      </div>
    </div>
<% end %>
</div>
<%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
